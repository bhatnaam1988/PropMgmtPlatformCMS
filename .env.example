# Swiss Alpine Journey - Environment Variables Template
# Copy this file to .env.local for local development
# DO NOT commit .env.local to git (it contains secrets)

# ============================================
# DATABASE
# ============================================
# Local: mongodb://localhost:27017/swiss-alpine
# Emergent: (already configured in .env)
MONGO_URL=mongodb://localhost:27017/swiss-alpine

# ============================================
# UPLISTING API
# ============================================
UPLISTING_API_KEY=your_uplisting_api_key_here
UPLISTING_API_URL=https://api.uplisting.io
UPLISTING_CLIENT_ID=your_client_id_here

# ============================================
# STRIPE (PAYMENT PROCESSING)
# ============================================
# Get your keys from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

STRIPE_CURRENCY=chf
STRIPE_TAX_MODE=manual

# ============================================
# EMAIL SERVICE (RESEND)
# ============================================
# Get your API key from: https://resend.com/api-keys
EMAIL_PROVIDER=resend
RESEND_API_KEY=re_your_resend_api_key_here
EMAIL_FROM=onboarding@resend.dev

# ============================================
# ADMIN ALERTS
# ============================================
ADMIN_EMAIL=your_email@example.com
ADMIN_ALERT_ENABLED=true

# ============================================
# MANUAL VAT CONFIGURATION
# ============================================
MANUAL_VAT_ENABLED=true
MANUAL_VAT_RATE=7.7
MANUAL_VAT_NAME=Swiss VAT

# ============================================
# RETRY CONFIGURATION
# ============================================
MAX_BOOKING_RETRIES=2
RETRY_DELAY_MS=2000

# ============================================
# NEXT.JS CONFIGURATION
# ============================================
# Local: http://localhost:3000
# Production: Your deployed URL
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# ============================================
# SANITY CMS (OPTIONAL)
# ============================================
NEXT_PUBLIC_SANITY_PROJECT_ID=temp-project-id
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2024-01-01
SANITY_API_TOKEN=temp-token
